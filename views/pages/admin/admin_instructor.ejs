<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head_admin'); %>
</head>
<body>

<header>
    <%- include('../../partials/header', { user: session.user, navigation: { active: 'admin' }}); %>
</header>

<main class="container-fluid py-2">
    <div class="row">
        <div class="col-12">
            <h1><%= __('AdminHeader') %></h1>
            <%- include('../../partials/admin_navigation', { current_page: 'instructor' }) %>        
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <%= __('AdminInstructorDescription') %>
                </div>
                <div class="card-body">
                    <table class="table table-md table-hover">
                        <thead>
                            <tr>
                                <th><%= __('AdminInstructorTableHeaderName') %></th>
                                <th class="text-right"><%= __('AdminInstructorTableHeaderSlots') %></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% instructors.forEach(instructor => { %>
                                <tr>
                                    <td>
                                        <strong><%= instructor.name %></strong><br>
                                        <small><%= instructor.email %></small>
                                    </td>
                                    <td><%= instructor.slots %></td>
                                    <td>
                                        <div class="float-end">
                                            <button type="button" title="<%= __('AdminInstructorTableControlDeleteLabel') %>" data-bs-toggle="modal" data-bs-target="#deleteInstructor" data-bs-instructor-id="<%= instructor.id %>" class="btn btn-secondary btn-md mx-2"><i class="bi-trash-fill"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <div class="button-bar">
                        <button type="button" class="btn btn-md btn-secondary" title="Skapa handledare" data-bs-toggle="modal" data-bs-target="#newInstructor"><%= __('AdminInstructorCreateNewButtonTitle') %></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <%= __('AdminInstructorHelpPaneTitle') %>
                </div>
                <div class="card-body text-muted">
                    <%- __('AdminInstructorHelpPaneContent') %>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../../partials/admin_instructor_modal_new'); %>
<%- include('../../partials/admin_instructor_modal_edit'); %>
<%- include('../../partials/admin_instructor_modal_delete'); %>

<footer>
  <%- include('../../partials/footer'); %>
</footer>

</body>
</html>