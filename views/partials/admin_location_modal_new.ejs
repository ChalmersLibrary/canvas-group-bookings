<div class="modal modal-md fade" id="newLocation" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="newLocationLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form class="needs-validation" id="newLocationForm" novalidate action="/api/admin/location">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newLocationLabel"><%= __('AdminLocationModalNewLabel') %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="<%= __('AdminLocationModalNewButtonCloseLabel') %>"></button>
                </div>
                <div class="modal-body loading-spinner">
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
                <div class="modal-body loaded-content" style="display:none;">
                    <ul class="nav nav-tabs" id="newLocationTab" role="tablist">
                        <li class="nav-item" role="presentation">
                          <button class="nav-link active" id="new-search-tab" data-bs-toggle="tab" data-bs-target="#new-tab-search" type="button" role="tab" aria-controls="new-tab-search" aria-selected="true"><%= __('AdminLocationModalNewTabSearchLabel') %></button>
                        </li>
                        <li class="nav-item" role="presentation">
                          <button class="nav-link" id="new-manual-tab" data-bs-toggle="tab" data-bs-target="#new-tab-manual" type="button" role="tab" aria-controls="new-tab-manual" aria-selected="false"><%= __('AdminLocationModalNewTabManualLabel') %></button>
                        </li>
                    </ul>
                    <div class="tab-content" id="newCourseTabContent">
                        <div class="tab-pane fade show active" id="new-tab-search" role="tabpanel" aria-labelledby="new-search-tab">
                            <p>
                                <select id="n_existing_location_id" class="form-select" data-default-text="<%= __('AdminLocationModalNewTabSearchExistingLocationSelectDefaultText') %>">
                                </select>
                            </p>
                            <div class="card selected-location-details" style="display:none;">
                                <div class="card-body">
                                    <h5 class="card-title" id="n_disp_location_name"></h5>
                                    <p>
                                        <small class="text-muted" id="n_disp_location_description"></small>
                                    </p>
                                    <p>
                                        <strong><%= __('AdminLocationModalNewTabSearchSelectedExternalUrlLabel') %></strong><br>
                                        <span id="n_disp_location_external_url"></span>
                                    </p>
                                    <p>
                                        <strong><%= __('AdminLocationModalNewTabSearchSelectedCampusMapsLabel') %></strong><br>
                                        <span id="n_disp_location_campus_maps_id"></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="new-tab-manual" role="tabpanel" aria-labelledby="new-manual-tab">
                            <p>
                                <label for="n_location_name"><%= __('AdminLocationModalLabelName') %></label><br>
                                <input type="text" class="form-control" id="n_location_name" value="" required>    
                            </p>
                            <p>
                                <label for="n_location_description"><%= __('AdminLocationModalLabelDescription') %></label><br>
                                <textarea id="n_location_description" class="form-control" style="height:190px;"></textarea>
                            </p>
                            <p>
                                <label for="n_location_external_url"><%= __('AdminLocationModalLabelExternalUrl') %></label><br>
                                <input type="text" class="form-control" id="n_location_external_url" value="">
                            </p>
                            <p>
                                <label for="n_location_campus_maps_id"><%= __('AdminLocationModalLabelCampusMapsId') %></label><br>
                                <input type="text" class="form-control" id="n_location_campus_maps_id" value="">
                            </p>
                            <p>
                                <label for="n_location_max_individuals"><%= __('AdminLocationModalLabelMaxIndividuals') %></label><br>
                                <input type="number" class="form-control" id="n_location_max_individuals" value="">
                                <small><%= __('AdminLocationModalLabelMaxIndividualsNote') %></small>
                            </p>
                        </div>
                    </div>
                    <div class="alert alert-danger alert-error" style="display:none;">
                        <strong>Ett fel uppstod: </strong><span></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= __('AdminLocationModalNewButtonCloseLabel') %></button>
                    <button type="submit" class="btn btn-primary" id="newLocationSaveButton"><%= __('AdminLocationModalNewButtonSubmitLabel') %> <span class="spinner-border spinner-border-sm" style="display:none;" role="status" aria-hidden="true"></span></button>
                </div>
            </div>
        </form>
    </div>
</div>